<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/playAgain"
        android:layout_width="167dp"
        android:layout_height="59dp"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="113dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="resetData"
        android:text="@string/play_again"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:alpha="0"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-5dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="349dp"
        android:layout_height="352dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/grid"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgain"
        app:rowCount="3"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/piece1"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />


        <ImageButton
            android:id="@+id/piece2"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />


        <ImageButton
            android:id="@+id/piece3"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />


        <ImageButton
            android:id="@+id/piece4"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/piece5"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />


        <ImageButton
            android:id="@+id/piece6"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/piece7"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />


        <ImageButton
            android:id="@+id/piece8"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/piece9"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:contentDescription="@string/app_name"
            android:onClick="dropIn"
            android:scaleType="fitStart"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>